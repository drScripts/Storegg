<%- include ../../sections/head.ejs %> <%- include ../../sections/navbar.ejs %>
<%- include ../../sections/sidebar.ejs %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Edit Payment</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
            <li class="breadcrumb-item">
              <a href="/payment">Payment</a>
            </li>
            <li class="breadcrumb-item active">Edit</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <%- include ../../sections/messages.ejs %>
      <div class="row">
        <div class="col-md-12">
          <!-- general form elements -->
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Edit Payment Form</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/payment/<%= data._id %>?_method=PUT" method="post">
              <div class="card-body">
                <div class="form-group">
                  <label for="type">Type</label>
                  <input
                    type="text"
                    class="form-control"
                    id="type"
                    placeholder="Enter Type"
                    name="type"
                    required
                    value="<%= data.type %>"
                  />
                </div>
                <div class="form-group">
                  <label>Bank</label>
                  <div class="select2-purple">
                    <select
                      class="form-control select2"
                      style="width: 100%"
                      multiple
                      required
                      name="banks"
                      data-placeholder="Select Bank"
                    >
                      <% banks.forEach(bank => {%>
                      <option value="<%= bank._id %>"
                        <% data.banks.forEach(e => { %>
                          <% if(e._id.toString() === bank._id.toString()){ %> 
                            selected
                          <% } %> 
                        <% }) %>
                        >
                        <%= bank.bankName %> - <%= bank.name %>
                      </option>
                      <% }) %>
                    </select>
                  </div>
                </div>
              </div>
              <!-- /.card-body -->
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
          <!-- /.card -->

          <!-- /.card -->
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../sections/footer.ejs%> 
